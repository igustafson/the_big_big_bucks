<%= form_for(@show) do |f| %>
  <%= render 'shared/error_messages', :target => @show %>

  <div class="field">
    <%= f.label :scheduled_for %><br />
    <%= f.datetime_select :scheduled_for %>
  </div>
  <div class="field">
    <%= f.label :venue_name %><br />
    <%= f.text_field :venue_name %>
  </div>
  <div class="field">
    <%= f.label :venue_address_1 %><br />
    <%= f.text_field :venue_address_1 %>
  </div>
  <div class="field">
    <%= f.label :venue_address_2 %><br />
    <%= f.text_field :venue_address_2 %>
  </div>
  <div class="field">
    <%= f.label :venue_city %><br />
    <%= f.text_field :venue_city %>
  </div>
  <div class="field">
    <%= f.label :venue_state %><br />
    <%= f.text_field :venue_state %>
  </div>
  <div class="field">
    <%= f.label :venue_postal_code %><br />
    <%= f.text_field :venue_postal_code %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :info %><br />
    <%= f.text_area :info %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
